---
// ABOUTME: Category filter pill component for blog listing
// ABOUTME: Supports active state and hover effects

interface Props {
  category: string;
  href: string;
  isActive?: boolean;
}

const { category, href, isActive = false } = Astro.props;
---

<a
  href={href}
  class:list={[
    'inline-flex items-center px-4 py-2 rounded-full text-sm font-medium transition-all border',
    isActive
      ? 'bg-[var(--color-accent-muted)] border-[var(--color-accent)] text-[var(--color-accent)]'
      : 'border-[var(--color-border-default)] text-[var(--color-text-secondary)] hover:border-[var(--color-accent)] hover:text-[var(--color-accent)] hover:bg-[var(--color-accent-muted)]',
  ]}
  aria-current={isActive ? 'true' : undefined}
>
  {category}
</a>
