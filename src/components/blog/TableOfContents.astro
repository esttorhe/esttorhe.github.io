---
// ABOUTME: Sticky table of contents component for blog posts
// ABOUTME: Includes scrollspy highlighting for active sections

interface Heading {
  depth: number;
  slug: string;
  text: string;
}

interface Props {
  headings: Heading[];
}

const { headings } = Astro.props;

const filteredHeadings = headings.filter((h) => h.depth >= 2 && h.depth <= 3);
---

{filteredHeadings.length > 0 && (
  <nav class="toc hidden lg:block sticky top-24 max-h-[calc(100vh-8rem)] overflow-y-auto" aria-label="Table of contents">
    <h2 class="text-xs font-semibold uppercase tracking-wider text-[var(--color-text-tertiary)] mb-4">
      On this page
    </h2>
    <ul class="space-y-2">
      {filteredHeadings.map((heading) => (
        <li class:list={[heading.depth === 3 && 'ml-4']}>
          <a
            href={`#${heading.slug}`}
            class="toc-link block text-sm text-[var(--color-text-secondary)] hover:text-[var(--color-accent)] transition-colors py-1"
            data-heading={heading.slug}
          >
            {heading.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
)}

<script>
  function setupScrollspy() {
    const tocLinks = document.querySelectorAll('.toc-link');
    const headings = Array.from(tocLinks).map((link) => {
      const id = link.getAttribute('data-heading');
      return document.getElementById(id!);
    }).filter(Boolean) as HTMLElement[];

    if (headings.length === 0) return;

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          const id = entry.target.id;
          const link = document.querySelector(`.toc-link[data-heading="${id}"]`);

          if (entry.isIntersecting) {
            // Remove active from all
            tocLinks.forEach((l) => l.classList.remove('text-[var(--color-accent)]', 'font-medium'));
            // Add active to current
            link?.classList.add('text-[var(--color-accent)]', 'font-medium');
          }
        });
      },
      {
        rootMargin: '-80px 0px -80% 0px',
        threshold: 0,
      }
    );

    headings.forEach((heading) => observer.observe(heading));

    // Cleanup on navigation
    document.addEventListener('astro:before-preparation', () => {
      observer.disconnect();
    }, { once: true });
  }

  // Run on initial load and after navigation
  setupScrollspy();
  document.addEventListener('astro:page-load', setupScrollspy);
</script>
