---
// ABOUTME: GitHub repository embed component - replaces Hugo github shortcode
// ABOUTME: Displays a styled link card for a GitHub repository

interface Props {
  owner: string;
  repo: string;
  commit?: string;
}

const { owner, repo, commit } = Astro.props;
const repoUrl = `https://github.com/${owner}/${repo}`;
const commitUrl = commit ? `${repoUrl}/commit/${commit}` : undefined;
---

<div class="github-repo">
  <a href={repoUrl} target="_blank" rel="noopener noreferrer" class="repo-link">
    <svg class="github-icon" viewBox="0 0 16 16" width="24" height="24" aria-hidden="true">
      <path fill="currentColor" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"></path>
    </svg>
    <div class="repo-info">
      <span class="repo-name">{owner}/{repo}</span>
      {commit && (
        <span class="commit-hash">@ {commit.slice(0, 7)}</span>
      )}
    </div>
    <svg class="external-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
      <polyline points="15 3 21 3 21 9"></polyline>
      <line x1="10" y1="14" x2="21" y2="3"></line>
    </svg>
  </a>
</div>

<style>
  .github-repo {
    margin: 1.5rem 0;
  }

  .repo-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 1.25rem;
    background: var(--color-bg-surface);
    border: 1px solid var(--color-border-subtle);
    border-radius: var(--radius-md);
    text-decoration: none;
    color: var(--color-text-primary);
    transition: all 0.2s ease;
  }

  .repo-link:hover {
    border-color: var(--color-accent);
    background: var(--color-bg-elevated);
  }

  .github-icon {
    flex-shrink: 0;
    color: var(--color-text-secondary);
  }

  .repo-info {
    flex: 1;
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    min-width: 0;
  }

  .repo-name {
    font-family: var(--font-mono);
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--color-accent);
  }

  .commit-hash {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--color-text-tertiary);
  }

  .external-icon {
    flex-shrink: 0;
    color: var(--color-text-tertiary);
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .repo-link:hover .external-icon {
    opacity: 1;
  }
</style>
