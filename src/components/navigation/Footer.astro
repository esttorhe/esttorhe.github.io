---
// ABOUTME: Site footer with social links and copyright
// ABOUTME: Includes RSS link and sloth illustration

const socialLinks = [
  { href: 'https://github.com/esttorhe', label: 'github' },
  { href: 'https://bsky.app/profile/estebantorr.es', label: 'bluesky' },
  { href: 'https://mastodon.social/@esttorhe', label: 'mastodon', rel: 'me' },
  { href: 'https://linkedin.com/in/estebantorres', label: 'linkedin' },
  { href: '/rss.xml', label: 'rss' },
];

const currentYear = new Date().getFullYear();
---

<footer class="border-t border-[var(--color-border-subtle)] py-12 mt-auto">
  <div class="container">
    <div class="flex flex-col md:flex-row items-center justify-between gap-6">
      <!-- Social Links -->
      <nav class="flex items-center gap-4" aria-label="Social links">
        {socialLinks.map((link, index) => (
          <>
            <a
              href={link.href}
              class="font-mono text-sm text-[var(--color-text-secondary)] hover:text-[var(--color-accent)] transition-colors"
              target={link.href.startsWith('http') ? '_blank' : undefined}
              rel={link.rel || (link.href.startsWith('http') ? 'noopener noreferrer' : undefined)}
            >
              {link.label}
            </a>
            {index < socialLinks.length - 1 && (
              <span class="text-[var(--color-text-tertiary)]" aria-hidden="true">Â·</span>
            )}
          </>
        ))}
      </nav>

      <!-- Copyright -->
      <div class="flex items-center gap-2 text-sm text-[var(--color-text-tertiary)]">
        <span>&copy; {currentYear} Esteban Torres</span>
        <!-- Sloth tiny illustration -->
        <img
          src="/assets/images/illustrations/sloth-tiny.webp"
          alt=""
          class="inline-block w-10 h-10 object-contain"
          aria-hidden="true"
        />
      </div>
    </div>

    <!-- Built with Astro (subtle) -->
    <div class="mt-6 text-center">
      <span class="text-xs text-[var(--color-text-tertiary)]">
        Built with <a href="https://astro.build" class="hover:text-[var(--color-accent)] transition-colors" target="_blank" rel="noopener noreferrer">Astro</a>
      </span>
    </div>
  </div>
</footer>
