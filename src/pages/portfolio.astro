---
// ABOUTME: Portfolio page showcasing featured work and OSS/experiments
// ABOUTME: Data loaded from src/data/portfolio.json

import PageLayout from '../layouts/PageLayout.astro';
import portfolioData from '../data/portfolio.json';

interface Project {
  title: string;
  description: string;
  tags: string[];
  url: string | null;
  role?: string;
  github?: string | null;
  image?: string;
}

const featured: Project[] = portfolioData.featured;
const lab: Project[] = portfolioData.lab;
---

<PageLayout title="Portfolio" description="Featured work and open source projects by Esteban Torres.">
  <article class="py-12 md:py-16">
    <div class="container">
      <header class="mb-12 animate-slide-up">
        <h1 class="text-[var(--text-3xl)] font-heading font-bold mb-4">Portfolio</h1>
        <p class="text-[var(--color-text-secondary)] max-w-2xl">
          A collection of my professional work and open source experiments.
        </p>
      </header>

      <!-- Featured Work Section -->
      <section class="mb-16 animate-slide-up stagger-1">
        <h2 class="text-xl font-heading font-semibold mb-6 pb-2 border-b border-[var(--color-border-subtle)] flex items-center gap-2">
          <img src="/assets/images/icons/icon-trophy.webp" alt="" class="w-8 h-8 object-contain" aria-hidden="true" />
          Featured Work
        </h2>

        <div class="grid md:grid-cols-2 gap-6">
          {featured.map((project) => (
            <a
              href={project.url || '#'}
              target={project.url ? '_blank' : undefined}
              rel={project.url ? 'noopener noreferrer' : undefined}
              class="group block rounded-[var(--radius-lg)] border border-[var(--color-border-default)] bg-[var(--color-bg-surface)] hover:border-[var(--color-accent)] hover:shadow-lg transition-all overflow-hidden"
            >
              <!-- Hero Image -->
              <div class="aspect-[16/9] bg-[var(--color-bg-inset)] overflow-hidden">
                {project.image ? (
                  <img
                    src={project.image}
                    alt={`${project.title} screenshot`}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                  />
                ) : (
                  <div class="w-full h-full flex items-center justify-center text-[var(--color-text-tertiary)]">
                    <svg class="w-16 h-16 opacity-30" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                  </div>
                )}
              </div>

              <!-- Content -->
              <div class="p-5">
                <div class="flex items-center gap-3 mb-2">
                  <h3 class="text-lg font-heading font-semibold group-hover:text-[var(--color-accent)] transition-colors">
                    {project.title}
                  </h3>
                  {project.role && (
                    <span class="text-xs font-mono px-2 py-1 rounded-full bg-[var(--color-accent-muted)] text-[var(--color-accent)]">
                      {project.role}
                    </span>
                  )}
                </div>
                <p class="text-sm text-[var(--color-text-secondary)] mb-4 line-clamp-2">
                  {project.description}
                </p>
                <div class="flex items-center justify-between">
                  <div class="flex flex-wrap gap-1.5">
                    {project.tags.slice(0, 3).map((tag) => (
                      <span class="text-xs font-mono px-2 py-0.5 rounded-full bg-[var(--color-bg-inset)] text-[var(--color-text-tertiary)]">
                        {tag}
                      </span>
                    ))}
                  </div>
                  {project.url && (
                    <span class="inline-flex items-center gap-1 text-sm text-[var(--color-text-tertiary)] group-hover:text-[var(--color-accent)] transition-colors">
                      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                      </svg>
                    </span>
                  )}
                </div>
              </div>
            </a>
          ))}
        </div>
      </section>

      <!-- Lab Section -->
      <section class="animate-slide-up stagger-2">
        <h2 class="text-xl font-heading font-semibold mb-6 pb-2 border-b border-[var(--color-border-subtle)] flex items-center gap-2">
          <img src="/assets/images/icons/icon-lab.webp" alt="" class="w-12 h-12 object-contain" aria-hidden="true" />
          Lab
        </h2>
        <p class="text-[var(--color-text-secondary)] mb-6">
          Experiments, side projects, and open source contributions.
        </p>

        <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
          {lab.map((project) => (
            <a
              href={project.url || project.github || '#'}
              target="_blank"
              rel="noopener noreferrer"
              class="group block rounded-[var(--radius-md)] border border-[var(--color-border-subtle)] hover:border-[var(--color-accent)] hover:bg-[var(--color-bg-surface)] transition-all overflow-hidden"
            >
              <!-- Hero Image -->
              <div class="aspect-[16/10] bg-[var(--color-bg-inset)] overflow-hidden">
                {project.image ? (
                  <img
                    src={project.image}
                    alt={`${project.title} screenshot`}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                  />
                ) : (
                  <div class="w-full h-full flex items-center justify-center text-[var(--color-text-tertiary)]">
                    <svg class="w-10 h-10 opacity-30" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                  </div>
                )}
              </div>

              <!-- Content -->
              <div class="p-3">
                <div class="flex items-start justify-between gap-2 mb-1">
                  <h3 class="text-sm font-heading font-medium group-hover:text-[var(--color-accent)] transition-colors line-clamp-1">
                    {project.title}
                  </h3>
                  <div class="flex items-center gap-1 flex-shrink-0">
                    {project.github && (
                      <svg class="w-3.5 h-3.5 text-[var(--color-text-tertiary)]" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                      </svg>
                    )}
                    {project.url && (
                      <svg class="w-3.5 h-3.5 text-[var(--color-text-tertiary)]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                      </svg>
                    )}
                  </div>
                </div>
                <p class="text-xs text-[var(--color-text-secondary)] mb-2 line-clamp-2">
                  {project.description}
                </p>
                <div class="flex flex-wrap gap-1">
                  {project.tags.slice(0, 2).map((tag) => (
                    <span class="text-[10px] font-mono px-1.5 py-0.5 rounded bg-[var(--color-bg-inset)] text-[var(--color-text-tertiary)]">
                      {tag}
                    </span>
                  ))}
                </div>
              </div>
            </a>
          ))}
        </div>

        <p class="mt-8 text-sm text-[var(--color-text-tertiary)]">
          More on <a href="https://github.com/esttorhe" target="_blank" rel="noopener noreferrer" class="text-[var(--color-accent)] hover:underline">GitHub</a>
        </p>
      </section>
    </div>
  </article>
</PageLayout>

<style>
  .line-clamp-1 {
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
